<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/levelToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/container4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/level1"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level2"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level3"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/level4"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level5"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level6"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/level7"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="7"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level8"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level9"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="9"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/level10"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level11"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="11"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level12"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/level13"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="13"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level14"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="14"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level15"
                                android:layout_width="97dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_levels"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/button_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>